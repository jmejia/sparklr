<%= form_for @spark, :html => { :class => 'form-horizontal' } do |f| %>

  <div class="control-group">
    <%= f.label :text, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :text, :rows => 3, :class => 'span5' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :tag_list, "Tags", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :tag_list, :class => 'span5' %><br />
      (Separated by commas)
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                sparks_path, :class => 'btn' %>
  </div>
<% end %>
