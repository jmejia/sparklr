<%- model_class = Spark -%>
<% content_for :heading  do %>
  <h1 class="pull-left"><%= @sparklr.page_title%></h1>
<div class="dropbox-button pull-left"><%= link_to "Update From Dropbox", update_from_dropbox_path, method: :put, class: 'btn btn-primary'%></div>
<% end %>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:text) %></th>
      <th class="top-right">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @sparklr.sparks.each do |spark| %>
      <tr>
        <td><%= spark.text %></td>
        <td><%= link_to "Edit", edit_spark_path(:user_slug => @user.slug, :id => spark.id), class: "btn btn-small btn-success" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_spark_path,
            :class => 'btn btn-primary' %>
